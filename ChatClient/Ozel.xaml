<Window x:Class="ChatClient.Ozel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
        mc:Ignorable="d"
        Title="Ozel" Height="256.43" Width="346.009" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid>
        <TextBox x:Name="txtMesaj" HorizontalAlignment="Left" Height="20" Margin="4,197,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="249" KeyDown="txtMesaj_KeyDown"/>
        <Button x:Name="btnGonder" Content="Gönder" HorizontalAlignment="Left" Margin="258,197,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <ListView x:Name="lbMesajlar" HorizontalAlignment="Left" Height="188" Margin="4,4,0,0" VerticalAlignment="Top" Width="329" MouseDoubleClick="lbMesajlar_MouseDoubleClick">
            <ListView.ItemTemplate><!--renklendirme yap-->
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Background="{Binding Background}">
                        <TextBlock Text="{Binding Content.uye.nickname}" />
                        <TextBlock Text=" " />
                        <TextBlock Text="{Binding Content.mesaj}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Window>
