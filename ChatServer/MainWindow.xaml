<Window x:Class="ChatServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatServer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnServer" Content="Start Server" HorizontalAlignment="Left" Margin="191,268,0,0" VerticalAlignment="Top" Width="194" Click="Button_Click"/>
        <TextBlock x:Name="txtReturn" HorizontalAlignment="Left" Margin="191,117,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="42" Width="194"/>
        <Button Content="Send Message" HorizontalAlignment="Left" Margin="191,292,0,0" VerticalAlignment="Top" Width="194" Click="Button_Click_1"/>
        <TextBox x:Name="txtBox" HorizontalAlignment="Left" Height="48" Margin="191,191,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="194"/>
        <ListBox x:Name="lblClients" HorizontalAlignment="Left" Height="194" Margin="456,117,0,0" VerticalAlignment="Top" Width="144"/>

    </Grid>
</Window>
